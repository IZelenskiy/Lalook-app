<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Anastasia Ivanchenko"
            android:textColor="@color/colorIconNavigationTop"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="Kharkov, Ukraine"
            android:textColor="@color/colorBorder"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageLocation"
            app:layout_constraintTop_toBottomOf="@+id/textName" />

        <TextView
            android:id="@+id/textSubscribe"
            android:layout_width="128dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/blue_border_baground"
            android:text="Подписатся"
            android:textAlignment="center"
            android:textColor="@color/colorMainBackground"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageLocation" />

        <ImageView
            android:id="@+id/imageLocation"
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textName"
            app:srcCompat="@drawable/ic_location" />

        <ImageView
            android:id="@+id/imageProfileAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toStartOf="@+id/imageProfilePhone"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintStart_toEndOf="@+id/textSubscribe"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_agent_profile"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageProfilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_phone"
            tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>

</merge>